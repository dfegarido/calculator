<Custom@Button>
    font_size:'30dp'


<CustomBox@BoxLayout>
    spacing:10


<CalcGridLayout>
    id: calc
    display: entry
    rows: 6
    padding:10
    spacing:10

    BoxLayout:
        TextInput:
            id: entry
            font_size: '70dp'
            multiline: False

    CustomBox:

        Custom:
            text: 'AC'
            on_press: entry.text += self.text
        Custom:
            text: 'M+'
            on_press: entry.text += self.text
        Custom:
            text: 'M-'
            on_press: entry.text += self.text
        Custom:
            text: 'M'
            on_press: entry.text += self.text

    CustomBox:

        Custom:
            text: '7'
            on_press: entry.text += self.text
        Custom:
            text: '8'
            on_press: entry.text += self.text
        Custom:
            text: '9'
            on_press: entry.text += self.text
        Custom:
            text: '+'
            on_press: entry.text += self.text

    CustomBox:
        Custom:
            text: '4'
            on_press: entry.text += self.text
        Custom:
            text: '5'
            on_press: entry.text += self.text
        Custom:
            text: '6'
            on_press: entry.text += self.text
        Custom:
            text: '-'
            on_press: entry.text += self.text

    CustomBox:
        Custom:
            text: '1'
            on_press: entry.text += self.text
        Custom:
            text: '2'
            on_press: entry.text += self.text
        Custom:
            text: '3'
            on_press: entry.text += self.text
        Custom:
            text: '*'
            on_press: entry.text += self.text

    CustomBox:
        Custom:
            text: '.'
            on_press: entry.text += self.text
        Custom:
            text: '0'
            on_press: entry.text += self.text
        Custom:
            text: '='
            on_press: calc.calC(entry.text)
        Custom:
            text: '/'
            on_press: entry.text += self.text
